<article class="post">
  <div class="title">
    <a href="/post/{{id}}">{{title}}</a>
    <span>({{user.username}})</span>
  </div>
  <div class="meta">
    posted {{format_date created_at}}
    |
    {{vote_count}} {{format_plural "point" vote_count}},
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>

  <div class="blog-text">
    {{blog_text}}
  </div>

</article>